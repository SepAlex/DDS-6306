library(RCurl)
library(plyr)
library(ggplot2)
library(dplyr)
library(tidyverse)
library(data.table)

#Obtain data sets (Beers and Breweries)
URL <- getURL("https://raw.githubusercontent.com/BivinSadler/MSDS-6306-Doing-Data-Science/master/Unit%207/Beers.csv")
Beers <- read.csv(text=URL)

URL1 <- getURL("https://raw.githubusercontent.com/BivinSadler/MSDS-6306-Doing-Data-Science/master/Unit%207/Breweries.csv")
Breweries <- read.csv(text=URL1)

#A1.)Create BREWERY_ID column for each data set
colnames(Beers)[colnames(Beers)=="Brewery_id"] <- "BREWERY_ID"
colnames(Breweries)[colnames(Breweries)=="Brew_ID"] <- "BREWERY_ID"

#A2.)Merge data sets
BreweriesFullDataset <- merge(Breweries, Beers, by = "BREWERY_ID",all = TRUE)

#A4.)Create dataframe for CO & TX and remove NA from IBU
#I am not sure why I cannot get beerCOTX to populate data
State&IBU <- BreweriesFullDataset[c(4,8)]
beerCOTX <- filter(BreweriesFullDataset, is.na(IBU) & State == 'CO' | State == 'TX')

#A5.)Put IBU in ascending order
#what am I doing wrong?
beerCOTX <- beerCOTX[order(IBU, rowid(IBU, "State"))]

#B6.)Plots
##IBU
ggplot(data =beerCOTX, aes(x=State, y=beerCOTX$IBU, color= IBU))+geom_point(stat ="identity")
##ABV
ggplot(data =beerCOTX, aes(x=State, y=beerCOTX$ABV, color= ABV))+geom_point(stat ="identity")

